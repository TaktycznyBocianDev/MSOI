@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout>
    <!-- Pasek nawigacyjny -->
    <MudAppBar Color="Color.Primary">
        <MudText Typo="Typo.h6">Moja Aplikacja</MudText>
        <MudSpacer />
        <MudIconButton Icon="mdi-menu" OnClick="ToggleDrawer" />
    </MudAppBar>

    <!-- Panel boczny -->
    <MudDrawer Open="drawerOpen" ClipMode="DrawerClipMode.Never" Variant="DrawerVariant.Responsive">
        <MudNavMenu>
            <MudNavLink Href="/" Icon="mdi-account-group">Pracownicy</MudNavLink>
            <MudNavLink Href="/item-types" Icon="mdi-package-variant">Typ przedmiotu</MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <!-- Główna zawartość strony -->
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool drawerOpen = true;

    private void ToggleDrawer()
    {
        drawerOpen = !drawerOpen;
    }
}
