@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
@* <MudPopoverProvider /> *@

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudPopoverProvider />

<MudLayout>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Style="width: 100%; max-width: 100%; padding-bottom: 80px;">
            @Body
        </MudContainer>
    </MudMainContent>

    <MudAppBar Style="background-color: #2E7D32; color: #FFFFFF;" Fixed="true" Bottom="true" Elevation="6">
        <MudContainer MaxWidth="MaxWidth.Large" Class="d-flex justify-space-around align-center">
            <MudButton Variant="Variant.Filled"
                       Size="Size.Large"
                       Style="color: #A5D6A7; padding: 12px 24px; font-size: 1.2rem;"
                       StartIcon="@Icons.Material.Filled.Group"
                       Href="/workers">
                Pracownicy
            </MudButton>
            <MudButton Variant="Variant.Filled"
                       Size="Size.Large"
                       Style="color: #A5D6A7; padding: 12px 24px; font-size: 1.2rem;"
                       StartIcon="@Icons.Material.Filled.Inventory2"
                       Href="/item-types">
                Przedmioty
            </MudButton>
        </MudContainer>
    </MudAppBar>
</MudLayout>
