@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
@* <MudPopoverProvider />  *@

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <!-- Pasek nawigacyjny -->
    <MudAppBar Class="custom-appbar">
        <MudText Typo="Typo.h5" Class="ml-4">SOI Manager</MudText>
        <MudSpacer />
    </MudAppBar>




    <!-- Stały drawer -->
    <MudDrawer Open="true" Anchor="Anchor.Start" Elevation="1" Variant="DrawerVariant.Persistent"
    MiniVariantWidth="56px">
        <MudNavMenu Class="mud-width-full px-3">
            <MudText Typo="Typo.h6" Class="py-3 text-primary">Nawigacja</MudText>
            <MudDivider Class="mb-2" />

            <MudNavLink Href="/" Icon="@Icons.Material.Filled.Work" Color="Color.Primary">
                Pracownicy
            </MudNavLink>
            <MudNavLink Href="/item-types" Icon="@Icons.Material.Filled.Category" Color="Color.Primary">
                Przedmioty
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>

    <!-- Główna zawartość strony -->
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Style="width: 100%; max-width: 100%;">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
