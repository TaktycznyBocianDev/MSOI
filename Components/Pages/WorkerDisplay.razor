@using MSOI.Models
@using MudBlazor


<MudCard>

    @if (Worker == null)
    {
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">Błąd w pobieraniu danych!</MudText>
            </CardHeaderContent>
        </MudCardHeader>
    }
    else
    {
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@Worker.Worker_name  @Worker.Worker_surname</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Edit" Color="Color.Warning">Warning</MudButton>
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudText>Wykonywany zawód: @Worker.Position</MudText>
            <MudText>Data zatrudnienia: @Worker.Employment_date</MudText>
            <MudText>PESEL: @Worker.Pesel</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Send" Color="Color.Primary" OnClick="() => OnSelect.InvokeAsync()">Send</MudButton>
        </MudCardActions>
    }

</MudCard>

@code {
    [Parameter] public WorkerModel? Worker { get; set; }
    [Parameter] public EventCallback OnSelect { get; set; }

}
